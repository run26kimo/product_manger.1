<%- model_class = OwnProduct -%>
<div class="page-header">
  <h1><%=t '.title', :default => OwnProduct %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:count) %></dt>
      <dd><pre class="prettyprint"><%= @own_product.count %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:memo) %></dt>
      <dd><pre class="prettyprint"><%= @own_product.memo %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              own_products_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_own_product_path(@own_product), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              own_product_path(@own_product),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

