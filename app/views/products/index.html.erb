<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Pic</th>
      <th>Name</th>
      <th>Pv</th>
      <th>Bv</th>
      <th>Price</th>
      <th>Suggest price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.code %></td>
        <td><%= product.pic %></td>
        <td><%= product.name %></td>
        <td><%= product.pv %></td>
        <td><%= product.bv %></td>
        <td><%= product.price %></td>
        <td><%= product.suggest_price %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

